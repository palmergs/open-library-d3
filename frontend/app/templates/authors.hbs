<div class="container">
  <div class="row">
    <div class="eight columns">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Birth</th>
            <th>Death</th>
          </tr>
          <tr>
            <td>
              {{one-way-input q 
                  focusOut=(action 'setSearch')
                  keyEvents=(hash 13=(action "setSearch") 27=(action "resetParam" 'q'))
                  classNames="u-full-width" 
                  title="enter/return to search, escape to clear"
                  placeholder="by prefix (title only)"}}
            </td>
            <td>
              {{one-way-input y 
                  focusOut=(action 'setBirthYear')
                  keyEvents=(hash 13=(action "setBirthYear") 27=(action "resetParam" 'y'))
                  classNames="u-full-width" 
                  title="enter/return to search, escape to clear"
                  placeholder="by year"}}
            </td>
            <td>
              {{one-way-input e 
                  focusOut=(action 'setDeathYear')
                  keyEvents=(hash 13=(action "setDeathYear") 27=(action "resetParam" 'e'))
                  classNames="u-full-width" 
                  title="enter/return to search, escape to clear"
                  placeholder="by year"}}
            </td>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <td colspan="3">{{page-elements.pagination model=model action=(action 'setPage')}}</td>
          </tr>
        </tfoot>
        <tbody>
          {{#each model as |author|}}
            {{#tables.clickable-row}}
              <td>{{link-to author.name 'authors.author' author.id}}</td>
              <td>{{#if author.birthDate}}{{link-to author.birthDate 'authors.year' author.birthDate}}{{/if}}</td>
              <td>{{author.deathDate}}</td>
            {{/tables.clickable-row}}
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="four columns">
      {{outlet}}
    </div>
  </div>
</div>
