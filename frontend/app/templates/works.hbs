<div class="container">
  <div class="row">
    <div class="eight columns">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Published</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <td colspan="3">{{page-elements.pagination model=model action=(action 'setPage')}}</td>
          </tr>
        </tfoot>
        <tbody>
          {{#each model as |work|}}
            {{#tables.clickable-row action=(action 'showWork' work)}}
              <td>{{work.title}}</td>
              <td>{{work.subtitle}}</td>
              <td>{{#if work.publishDate}}{{link-to work.publishDate 'works.year' work.publishDate}}{{/if}}</td>
            {{/tables.clickable-row}}
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="four columns">
      {{outlet}}
    </div>
  </div>
</div>
